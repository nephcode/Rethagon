{
  "compilerOptions": {
    "types": ["vite/client"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,   
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",  // Chemin de sortie des fichiers générés
    "composite": true  
  },
  "include": ["src"]
}